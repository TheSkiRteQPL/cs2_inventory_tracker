# Konfiguracja aplikacji Flask CS2 Inventory Tracker
# Skopiuj ten plik jako .env i wypełnij właściwymi wartościami

# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=twoj-bardzo-bezpieczny-klucz-tutaj-zmien-to

# Database Configuration
DATABASE_URL=sqlite:///cs2_tracker.db
# Dla PostgreSQL: postgresql://username:password@localhost/cs2_tracker
# Dla MySQL: mysql://username:password@localhost/cs2_tracker

# Steam API Configuration
STEAM_API_KEY=twoj-steam-api-klucz-tutaj
STEAM_WEB_API_URL=https://api.steampowered.com

# Price APIs
CSGOSKINS_API_KEY=opcjonalny-klucz-api
PRICEMPIRE_API_KEY=opcjonalny-klucz-api
STEAMWEBAPI_KEY=opcjonalny-klucz-api

# Email Configuration (dla powiadomień)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=twoj-email@gmail.com  
MAIL_PASSWORD=haslo-aplikacji-gmail

# Redis Configuration (dla Celery/cache)
REDIS_URL=redis://localhost:6379/0

# Security
BCRYPT_LOG_ROUNDS=12
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True

# Application Settings
ITEMS_PER_PAGE=20
PRICE_UPDATE_INTERVAL=300  # sekundy
MAX_STEAM_PROFILES=5
ENABLE_NOTIFICATIONS=True

# Development Settings
DEBUG=True
TESTING=False
